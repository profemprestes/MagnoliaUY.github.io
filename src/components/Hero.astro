---
import '../styles/components/hero.css';
import Background from '../assets/background.svg?url';
---

<section class="hero-section">
  <img src={Background} alt="" class="hero-background" />
  <div class="hero-overlay"></div>

  <!-- Content -->
  <div class="hero-content">
    <h1 class="hero-title">
      Diseñamos tus sueños<br />con las manos
    </h1>
    <p class="hero-description">
      Creaciones únicas en macramé, hechas con amor y dedicación para tu hogar
    </p>
    <a href="#products" class="hero-cta">
      Ver productos
    </a>
  </div>
</section>
