---
import '../styles/components/globalcontacto.css';
---

<section class="contact-section">
  <div class="contact-grid">
    <div class="contact-card">
      <div class="card-header">
        <img src="/src/icons/address-card.svg" alt="Contacto" class="card-icon" />
        <h2>Información de Contacto</h2>
      </div>
      <div class="card-content">
        <a href="mailto:magnolia_uy@outlook.com" class="contact-item">
          <img src="/src/icons/envelope.svg" alt="Email" class="contact-icon" />
          <span>magnolia_uy@outlook.com</span>
        </a>
        <a href="tel:+59892275012" class="contact-item">
          <img src="/src/icons/phone.svg" alt="Teléfono" class="contact-icon" />
          <span>+598 92275012</span>
        </a>
        <div class="contact-item">
          <img src="/src/icons/map-marker.svg" alt="Ubicación" class="contact-icon" />
          <span>Montevideo, Montevideo - Uruguay</span>
        </div>
      </div>
    </div>

    <div class="contact-card">
      <div class="card-header">
        <img src="/src/icons/credit-card.svg" alt="Pagos" class="card-icon" />
        <h2>Formas de Pago</h2>
      </div>
      <div class="card-content">
        <ul class="payment-list">
          <li>
            <img src="/src/icons/bank.svg" alt="Banco" class="payment-icon" />
            Transferencia bancaria
          </li>
          <li>
            <img src="/src/icons/money-bill.svg" alt="Efectivo" class="payment-icon" />
            Dinero
          </li>
          <li>
            <img src="/src/icons/credit-card.svg" alt="Tarjeta" class="payment-icon" />
            Tarjetas de crédito y débito
          </li>
          <li>
            <img src="/src/icons/link.svg" alt="Enlace" class="payment-icon" />
            Enlace de pago
          </li>
        </ul>
      </div>
    </div>

    <div class="contact-card">
      <div class="card-header">
        <img src="/src/icons/truck.svg" alt="Envíos" class="card-icon" />
        <h2>Métodos de Envío</h2>
      </div>
      <div class="card-content">
        <p class="shipping-status">Por acordar</p>
        <p class="shipping-info">
          <img src="/src/icons/truck.svg" alt="Envío" class="shipping-icon" />
          Envíos a todo el país. Dentro de Montevideo es Gratis.
        </p>
      </div>
    </div>
  </div>

  <div class="map-container">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d104904.85546707914!2d-56.185424!3d-34.903721!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x959f80ffc63bf7d3%3A0x6b321b2e355bec99!2sMontevideo%2C%20Uruguay!5e0!3m2!1ses!2s!4v1650000000000!5m2!1ses!2s"
      width="100%"
      height="450"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade">
    </iframe>
  </div>
</section>
