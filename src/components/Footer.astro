---
import '../styles/components/footer.css';

const socialLinks = [
  { href: 'https://instagram.com/magnoliauy', icon: 'instagram', label: 'Instagram' },
  { href: 'https://facebook.com/magnoliauy', icon: 'facebook', label: 'Facebook' },
  { href: 'https://wa.me/59898150140', icon: 'whatsapp', label: 'WhatsApp' },
];

const sections = [
  {
    title: 'Contacto',
    links: [
      { href: 'mailto:magnolia_uy@outlook.com', text: 'magnolia_uy@outlook.com' },
      { href: 'tel:+59898150140', text: '(+598) 98 150 140' },
      { href: '#', text: 'Montevideo, Uruguay' },
    ]
  },
  {
    title: 'Enlaces',
    links: [
      { href: '#about', text: 'Sobre nosotros' },
      { href: '#products', text: 'Productos' },
      { href: '/privacy', text: 'Política de privacidad' },
      { href: '/terms', text: 'Términos de servicio' },
    ]
  }
];
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-grid">
      <!-- Brand Column -->
      <div class="footer-brand">
        <img 
          src="/logo.svg" 
          alt="Magnolia UY" 
          class="footer-logo"
          width="160"
          height="48"
        />
        <p class="footer-description">
          Creaciones artesanales en macramé para hogares con personalidad.
        </p>
        
        <div class="footer-social">
          {socialLinks.map(({ href, icon, label }) => (
            <a 
              href={href}
              class="social-link"
              aria-label={label}
              target="_blank"
              rel="noopener noreferrer"
            >
              <img 
                src={`/icons/${icon}.svg`}
                alt={label}
                class="social-icon"
                width="24"
                height="24"
              />
            </a>
          ))}
        </div>
      </div>

      <!-- Sections -->
      {sections.map(({ title, links }) => (
        <div class="footer-section">
          <h3 class="footer-title">{title}</h3>
          <ul class="footer-links">
            {links.map(({ href, text }) => (
              <li class="footer-link-item">
                <a href={href} class="footer-link">
                  {text}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class="footer-bottom">
      <p>&copy; {new Date().getFullYear()} Magnolia UY. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>